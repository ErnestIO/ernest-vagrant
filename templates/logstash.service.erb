[Unit]
Description=logstash
After=docker.service elasticsearch.service
Requires=docker.service elasticsearch.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop logstash
ExecStartPre=-/usr/bin/docker rm logstash
ExecStartPre=/usr/bin/docker pull logstash
ExecStart=/usr/bin/docker run -p 5000:5000/tcp -h <%= @hostname %> -v /etc/logstash/:/etc/logstash/conf.d/ --link elasticsearch --name logstash logstash -f /etc/logstash/conf.d/logstash.conf

[Install]
WantedBy=multi-user.target
